<div class="ht__bradcaump__area bg-image--7">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner text-center">
                        	<h2 class="bradcaump-title">Shopping Cart</h2>
                            <nav class="bradcaump-content">
                              <a class="breadcrumb_item" href="/">Home</a>
                              <span class="brd-separetor">/</span>
                              <span class="breadcrumb_item active">Orders</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile </h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders}}
            <div class="panel panel-default">
            <div class="panel-body">
                <ul class="list-group">
                    {{#each this.items}} 
                    <li class="list-group-item">
                        
                        {{this.item.book_name}} | {{ this.qty }} Units
                        <span class="badge"> {{ this.price }} </span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="panel-footer">
                    <strong>Total Price:  Rs. {{ this.cart.totalPrice}}</strong>
            </div>
        </div>
        {{/each}}
    </div>
</div>